{{> header_partial_login}}

<h3 id="dataH3" class="data-h3">
    MySQL Data View Table
</h3>

<h4 id="data_viewH4" class="data_view-h4">
    User: {{user}} <br>
    Parts: {{parts}} <br>
    Rows: {{rows}} <br>
</h4>

{{#if rows}}
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            {{#each columns}}
                <th>{{this}}</th>
            {{/each}}
        </tr>
        </thead>
        <tbody>
        {{#each rows}}
            <tr>
                {{#each this}}
                    <td>{{this}}</td>
                {{/each}}
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <div class="alert alert-info">
        <strong>Info!</strong> No data found.
    </div>
{{/if}}



{{> footer_partial}}


<style>
    .data-h3 {
        margin-top: 20px;
        text-align: center;
    }

    .data_view-h4 {
        margin-top: 30px;
        text-align: center;
        font-size: 20px;
        color:rgb(1, 68, 128);
    }
</style>